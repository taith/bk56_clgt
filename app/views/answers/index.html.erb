<h1>Listing answers</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Question</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.id %></td>
        <td><%= answer.question.id %></td>
        <td><%= answer.title %></td>
        <td><%= answer.description %></td>
        <td><%= link_to 'Show', question_answers_path(@question, answer) %></td>
        <td><%= link_to 'Edit', edit_question_answer_path(@question, answer) %></td>
        <td><%= link_to 'Destroy', question_answer_path(@question, answer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_question_answer_path %>
<%= link_to 'Back', @question %>
